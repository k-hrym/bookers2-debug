<div class="col-xs-12">
    <h2>Follower Users</h2>
    <!--users一覧 -->
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |u| %>
          <tr>
            <td><%= attachment_image_tag(u.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
            <td><%= u.user.name %></td>
            <td>フォロー数:<%= u.user.relationships.count %></td>
            <td><% followers = Relationship.where(follower_id: u.user.id) %>
              フォロワー数:<%= followers.count %></td>

        <% if u.user == current_user %>
            <td></td>
        <% elsif u.user.followed_by?(current_user,u.user) %>
            <td><%= link_to'フォロー外す',user_relationships_path(u.user),method: :delete %></td>
        <% else %>
            <td><%= link_to'フォローする',user_relationships_path(u.user),method: :post %></td>
        <% end %>
            <td><%= link_to "Show", u.user, class: "user_#{u.user.id}" %></td>
          </tr>
        <% end %>
      </tbody>
</div>