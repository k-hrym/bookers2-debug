<div class="col-xs-12">
    <h2>Follow Users</h2>
    <!--users一覧 -->
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |u| %>
          <% follower = User.find_by(id: u.follower_id) %>
          <tr>
            <td><%= attachment_image_tag(follower, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
            <td><%= follower.name %></td>
            <td>フォロー数:<%= follower.relationships.count %></td>
            <td><% followers = Relationship.where(follower_id: follower.id) %>
              フォロワー数:<%= followers.count %></td>

        <% if follower.followed_by?(current_user,follower) %>
            <td><%= link_to'フォロー外す',user_relationships_path(follower),method: :delete %></td>
        <% else %>
            <td><%= link_to'フォローする',user_relationships_path(follower),method: :post %></td>
        <% end %>

            <td><%= link_to "Show", u.user, class: "user_#{u.user.id}" %></td>
          </tr>
        <% end %>
      </tbody>
</div>